<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorDefaultPrimary</item>
        <item name="colorPrimaryDark">@color/colorDefaultPrimaryDark</item>
        <item name="colorAccent">@color/colorDefaultAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
    </style>

    <!-- стиль поля ввода в калькуляторе -->
    <style name="CalculationInputLine">
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <!-- стиль иконки кнопки темной темы -->
    <style name="IconDark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">@dimen/zero_size</item>
        <item name="iconGravity">textStart</item>
        <item name="icon">@drawable/icon_dark_mode</item>
    </style>

    <!-- стиль кнопок -->
    <style name="Buttons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_padding</item>
    </style>

</resources>
